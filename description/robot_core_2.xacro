<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>
    
    <!-- ######################################################################## --> 
    <!--Connector-->

    <joint name="conector_joint" type="fixed">
        <parent link="chassis"/>
        <child link="conector_link"/>
        <origin xyz="-0.005 0 0.05" rpy="0 0 0"/>
    </joint>

    <link name="conector_link">
        <visual>
            <geometry>
                <box size="0.01 0.03 0.03"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <box size="0.01 0.03 0.03"/>
        </collision>
        <xacro:inertial_box mass="0.01" x="0.01" y="0.03" z="0.03">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    
    </link>
    <gazebo reference="conector_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <!--Connector/-->
    <!-- ######################################################################## -->
    <!--element1-->

    <joint name="element1_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <parent link="conector_link"/>
        <child link="element1_link"/>
    </joint>

    <link name="element1_link">
        <visual>
            <geometry>
                <box size="0.3 0.02 0.02"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>
    <gazebo reference="element1_link">
        <material>Gazebo/Red</material>
    </gazebo>
    <!--element1/-->

    <!--element2/-->
        <joint name="element2_joint" type="fixed">
            <parent link="element1_link"/>
            <child link="element2_link"/>
            <axis xyz="0 0 1"/>
            <!--limit effort="1000.0" lower="0.0" upper="0.548" velocity="0.5"/-->
            <origin xyz="-0.15 0 0" rpy="0 0 0"/>
        </joint>

        <link name="element2_link">
            <visual>
                <geometry>
                    <box size="0.15 0.02 0.02"/>
                </geometry>
                <origin rpy="1.57074 0 0" xyz="0.075 0 0"/>>
                <material name="red"/>
            </visual>
        </link>
        <gazebo reference="element2_link">
            <material>Gazebo/Red</material>
        </gazebo>
    <!--element2/-->
    
    <!--conector_2/-->
        <joint name="conector_2_joint" type="fixed">
                <parent link="element2_link"/>
                <child link="conector_2_link"/>
                <origin xyz="-0.075 0 0" rpy="0 0 0"/>
        </joint>

        <link name="conector_2_link">
            <visual>
                <geometry>
                    <box size="0.01 0.03 0.03"/>
                </geometry>
                <material name="red"/>
            </visual>
        </link>
        <gazebo reference="conector_2_link">
            <material>Gazebo/Red</material>
        </gazebo>
    <!--conector_2/-->

    <!--CHASSIS LINK 2-->
        
        <joint name="chassis_2_joint" type="fixed">
            <parent link="conector_2_link"/>
            <child link="chassis_2"/>
            <origin xyz="0 0 -0.05"/>
        </joint>

        <link name="chassis_2">
            <visual> 
                <origin xyz="-0.15 0 0.075"/>
                <geometry>
                    <box size="0.3 0.3 0.15"/>
                </geometry>
                <material name="blue"/>
            </visual>
            <collision> 
                <origin xyz="0.15 0 0.075"/>
                <geometry>
                    <box size="0.3 0.3 0.15"/>
                </geometry>
            </collision>
            <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
                <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            </xacro:inertial_box>
        </link>

        <gazebo reference = "chassis_2">
            <material>Gazebo/Blue</material>
        </gazebo>
    <!--CHASSIS LINK 2-->

    <!-- LEFT WHEEL LINK 2-->   
        <joint name="left_wheel_2_joint" type="fixed">
                <parent link="chassis_2"/>
                <child link="left_wheel_2"/>
                <origin xyz="-0.06 0.175 0" rpy="-${pi/2} 0 0"/>
                <axis xyz="0 0 1"/>
        </joint>

        <link name="left_wheel_2">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
                <material name="white"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1"  radius="0.05" length="0.04">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder >
        </link>

        <gazebo reference = "left_wheel_2">
            <material>Gazebo/White</material>
        </gazebo>
    <!-- LEFT WHEEL LINK 2-->




    <!-- RIGHT WHEEL LINK 2-->
        <joint name="right_wheel_2_joint" type="continuous">
                <parent link="chassis_2"/>
                <child link="right_wheel_2"/>
                <origin xyz="-0.06 -0.175 0" rpy="${pi/2} 0 0"/>
                <axis xyz="0 0 -1"/>
        </joint>

        <link name="right_wheel_2">
            <visual>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
                <material name="white"/>
            </visual>
            <collision>
                <geometry>
                    <cylinder radius="0.05" length="0.04"/>
                </geometry>
            </collision>
            <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.05" >
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder >
        </link>
        
        <gazebo reference = "right_wheel_2">
            <material>Gazebo/White</material>
        </gazebo>
    <!-- RIGHT WHEEL LINK 2-->

    <!-- CASTER WHEEL LINK-->
        <joint name="caster_wheel_2_joint" type="fixed">
            <parent link="chassis_2"/>
            <child link="caster_wheel_2"/>
            <origin xyz="-0.25 0 0"/>
        </joint>

        <link name="caster_wheel_2">
            <visual>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
                <material name="white"/>
            </visual>
            <collision>
                <geometry>
                    <sphere radius="0.05"/>
                </geometry>
            </collision>
            <xacro:inertial_sphere mass="0.1" radius="0.05" >
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_sphere>
        </link>

        <gazebo reference = "caster_wheel_2">
            <material>Gazebo/White</material>
            <mu1 value = "0.001"/>
            <mu2 value = "0.001"/>
        </gazebo>
    <!-- CASTER WHEEL LINK2-->
</robot>
