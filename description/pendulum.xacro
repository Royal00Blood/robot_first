<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>

        <!--Pendulum-->
        <link name="conector_pole">
            <inertial>
                <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <mass value="0.01"/>
                <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
            </inertial>
            
            <visual>
                <geometry>
                    <box size="0.02 0.02 0.02"/>
                </geometry>
                <material name="black"/>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </visual>

            <collision>
                <geometry>
                    <box size="0.02 0.02 0.02"/>
                </geometry>
            </collision>
            <xacro:inertial_box mass="0.01" x="0.02" y="0.02" z="0.02">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_box>
        </link>
    
        <joint name="conector_pole_joint" type="fixed">
            <parent link="chassis"/>
            <child link="conector_pole"/>
            <origin xyz="0.15 0 0.15" />
        </joint>

        <link name="pole">
    
            <visual>
                <geometry>
                    <cylinder length="0.3" radius="0.01"/>
                </geometry>
                <material name="black"/>
                <origin rpy="0 0 0" xyz="0 0 0"/>
            </visual>

            <collision>
                <geometry>
                    <cylinder length="0.3" radius="0.01"/>
                </geometry>
            </collision>

            <xacro:inertial_cylinder mass="0.05"  radius="0.01" length="0.03">
                <origin xyz="0 0 0" rpy="0 0 0"/>
            </xacro:inertial_cylinder >

        </link>
    
        <joint name="pole_joint" type="revolute">
            <parent link="conector_pole"/>
            <child link="pole"/>
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
            <axis xyz="0 1.0 0"/>
            <limit effort="1000.0" lower="-0.57075" upper="0.57075" velocity="1.0"/>
        </joint>
    
            <!--link name="pole_mass">
                <inertial>
                    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                    <mass value="0.01"/>
                    <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
                </inertial>
                <visual>
                <geometry>
                    <sphere radius="0.075"/>
                </geometry>
                <material name="blue"/>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                </visual>
            </link>
    
            <joint name="pole_mass_joint" type="fixed">
                <origin xyz="0.15 0 1.5" rpy="0 0 0"/>
                <axis xyz="0 0 0"/>
                <parent link="pole"/>
                <child link="pole_mass"/>
            </joint-->

            <gazebo reference = "pole">
                <material>Gazebo/black</material>
            </gazebo>

            <gazebo reference = "conector_pole">
                <material>Gazebo/white</material>
            </gazebo>
    
            <!--gazebo reference = "pole_mass">
                <material>Gazebo/blue</material>
            </gazebo-->
    
        <!--Pendulum/-->
</robot>